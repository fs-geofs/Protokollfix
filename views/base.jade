include ./mixins.jade

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='Norwin Roosen')
    link(rel='icon', href='/img/favicon.ico')
    block head
      link(href='/bower/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
      script(src='/bower/jquery/dist/jquery.min.js')
      script(src='/bower/bootstrap/dist/js/bootstrap.min.js')
  body
    //- fixed navbar
    .navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') 
            img#logo(src='/img/logo.png', style={height: '25px'})
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-left
            block navleft
          ul.nav.navbar-nav.navbar-right
            block navright
    //- content
    .container.fullheight
       block pagecontent
